" basic config
set nocompatible
syntax on
set showmode
set showcmd

set mouse=a
set encoding=utf-8
set t_Co=256

filetype indent on

set clipboard+=unnamed

" indent
set autoindent
set tabstop=4
set shiftwidth=4
set expandtab
set softtabstop=4

" appearence
set number
set cursorline
set wrap
set linebreak
set ruler
set showmatch
set hlsearch

" color scheme

colorscheme darkblue

" search
set showmatch
set ignorecase
set smartcase